{
  "exclude": [
    "node_modules",
    "./dist",
    "./test"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
  },
}
